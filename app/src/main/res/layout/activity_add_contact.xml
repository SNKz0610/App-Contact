<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_contactavatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF1712"
        app:civ_border_width="2dp" />

    <Button
        android:id="@+id/btn_contactuploadavatar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        android:text="📸 Upload 📸"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/edt_contactname"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/cus_edt"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:hint="   Enter name 🙆‍"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_contactbirthday"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/cus_edt"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:hint="   Enter birthday 🏢‍"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_contactphone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/cus_edt"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:hint="   Enter phone ☎"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_contactemail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/cus_edt"
        android:drawableStart="@drawable/ic_baseline_mail_24"
        android:hint="   Enter email 💌"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_contactaddress"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/cus_edt"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:hint="   Enter address 🏡"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_addcontact"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#B5FD61"
        android:text="ADD CONTACT"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

</LinearLayout>